    block content
      .container(id='dialog-form')
         form#contact_form.form-horizontal(method='POST', action='/users/register')
          fieldset
           .form-group
             label#lab.control-label(for='firstname') First Name:
             .inputGroupContainer
              .input-group
                span.input-group-addon
                  i.glyphicon.glyphicon-user
                input.form-control(name='firstname', placeholder='First Name', type='text')
           .form-group
             label#lab.control-label(for='lastname') Last Name:
             .inputGroupContainer
              .input-group
                span.input-group-addon
                  i.glyphicon.glyphicon-user
                input.form-control(name='lastname', placeholder='Last Name', type='text')
            // Text input
           .form-group
             label#lab.control-label Password
             .input-group
               span.input-group-addon
                 i.glyphicon.glyphicon-user
               input.form-control(name='password', placeholder='Password', type='password')
           .form-group
             label#lab.control-label Confirm Password
             .input-group
               span.input-group-addon
                 i.glyphicon.glyphicon-user
               input.form-control(name='confirmPassword', placeholder='Confirm Password', type='password')
           .form-group
             label#lab.control-label E-Mail
             .input-group
               span.input-group-addon
                 i.glyphicon.glyphicon-envelope
               input.form-control(name='email', placeholder='E-Mail Address', type='text')
           button.btn.btn-primary(type='submit') Sign up
           button.btn.btn-primary(type='button' onClick='closeWin()') Cancel






